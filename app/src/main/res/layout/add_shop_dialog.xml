<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="85dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_shop_price"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textColor="@color/clickColor"
                android:text="￥2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_exit"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/exit_tag"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_product_stock"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="85dp"
            android:text="库存11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_choose"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="85dp"
            android:text="请选择属性"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="10dp"
                android:text="购买数量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_minus"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:background="@drawable/shopcart_minus_grey"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_product_number"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_add"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/shopcart_add_red"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>
        <ImageView
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />
            <LinearLayout
                android:id="@+id/ll_attribute"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_tag1"
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.discount.pigpigroad.discountapp.Adapter.TagFlowLayout
                            android:id="@+id/tagflowlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:max_select="1"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_tag2"
                        android:text="null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.discount.pigpigroad.discountapp.Adapter.TagFlowLayout
                            android:id="@+id/tagflowlayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:max_select="1"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<TextView-->
                        <!--android:text="null"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content" />-->
                    <!--<LinearLayout-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->
                        <!--<com.discount.pigpigroad.discountapp.Flow.Flowlayout-->
                            <!--android:id="@+id/flowlayout2"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--/>-->
                    <!--</LinearLayout>-->
                <!--</LinearLayout>-->

            </LinearLayout>
        <Button
            android:id="@+id/btn_sure"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/notice_button_style"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
    <ImageView
        android:background="@drawable/shop_details_bg"
        android:layout_marginLeft="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp" />
</RelativeLayout>