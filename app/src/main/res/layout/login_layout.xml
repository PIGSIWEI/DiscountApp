<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:src="@drawable/login_bg_color"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="160dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_login"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="@color/white"
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_register"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="注册"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/linearlayout_circular_border"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/login_phone"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/clickColor"
                    android:text="+86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:background="@color/defaultColor"
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/et_phonenumber"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/edittext_cursor_color"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/defaultColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp" />
                <LinearLayout
                    android:id="@+id/ll_password"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/login_password"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <EditText
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:id="@+id/et_password"
                        android:textCursorDrawable="@drawable/edittext_cursor_color"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:hint="请输入密码"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_show_pwd"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/login_password_see2"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/defaultColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_sms"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/login_sms"
                            android:layout_width="29dp"
                            android:layout_height="29dp" />
                        <EditText
                            android:id="@+id/et_sms"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/edittext_cursor_color"
                            android:layout_weight="1"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:hint="请输入验证码"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/bt_sms"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:text="获取验证码"
                            android:background="@drawable/linearlayout_button"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/defaultColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_user"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/login_user"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />
                        <EditText
                            android:id="@+id/et_username"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/edittext_cursor_color"
                            android:layout_weight="1"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:hint="请输入用户名"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/defaultColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/bt_login"
                    android:textColor="@color/white"
                    android:text="登录"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/linearlayout_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <Button
                    android:visibility="gone"
                    android:id="@+id/bt_register"
                    android:textColor="@color/white"
                    android:text="注册"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/linearlayout_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_other"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@color/defaultColor"
                        android:layout_width="30dp"
                        android:layout_height="0.7dp" />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="其他"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@color/defaultColor"
                        android:layout_width="30dp"
                        android:layout_height="0.7dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_smslogin"
                        android:textSize="14dp"
                        android:textColor="@color/clickColor"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="验证码登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="忘记密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
